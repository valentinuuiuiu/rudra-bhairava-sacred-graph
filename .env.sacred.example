# Sacred Knowledge Graph Environment Configuration
# Copy this to .env.sacred and fill in your actual values

# OpenAI Configuration for Sacred Embeddings
OPENAI_API_KEY=your-openai-api-key-here

# PostgreSQL Configuration for Sacred Database
PG_HOST=localhost
PG_PORT=5433
PG_USER=shiva
PG_PASSWORD=your-pg-password
PG_DATABASE=piata

# Sacred System Configuration
SACRED_LOG_LEVEL=INFO
SACRED_EMBEDDING_MODEL=text-embedding-3-small
SACRED_VECTOR_DIMENSION=1536

# Cosmic Alignment (Optional)
COSMIC_ALIGNMENT_CHECK=true
VEDIC_CALENDAR_SYNC=false
